{
  "name": "netzmacht/html",
  "description": "Simple library for html rendering",
  "license": "LGPL-3.0-or-later",
  "type": "library",
  "keywords": [
    "Html",
    "helper"
  ],
  "authors": [
    {
      "name": "David Molineus",
      "email": "mail@netzmacht.de",
      "homepage": "https://netzmacht.de",
      "role": "Project leader"
    }
  ],
  "support": {
    "email": "mail@netzmacht.de",
    "issues": "https://github.com/netzmacht/html/issues",
    "source": "https://github.com/netzmacht/html"
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "doctrine/coding-standard": "^11.0.0",
    "phpcq/runner-bootstrap": "^1.0@dev",
    "phpspec/phpspec": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Netzmacht\\Html\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "3.1.x-dev",
      "dev-master": "3.0.x-dev",
      "dev-support/2.0.x": "2.0.x-dev"
    }
  }
}
